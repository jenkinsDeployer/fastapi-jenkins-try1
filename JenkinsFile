pipeline {
    agent any

    environment {
        VENV_DIR = "venv"
        SERVER_PID_FILE = "uvicorn.pid"
    }

    stages {
        stage('Clone Repo') {
            steps {
                checkout scm
            }
        }

        stage('Set Up Python Env') {
            steps {
                bat "python -m venv %VENV_DIR%"
                bat ".\\%VENV_DIR%\\Scripts\\python.exe -m pip install --upgrade pip"
                bat ".\\%VENV_DIR%\\Scripts\\python.exe -m pip install -r requirements.txt"
                bat ".\\%VENV_DIR%\\Scripts\\python.exe -m pip install pytest uvicorn"
            }
        }

        stage('Run Unit Tests') {
            steps {
                bat ".\\%VENV_DIR%\\Scripts\\python.exe -m pytest tests/"
            }
        }

        stage('Run FastAPI Server') {
            steps {
                bat """
                    call .\\%VENV_DIR%\\Scripts\\activate
                    start /B cmd /c "uvicorn main:app --host 127.0.0.1 --port 8000 > uvicorn.log 2>&1 & echo ! > ${SERVER_PID_FILE}"
                    timeout /T 5
                """
            }
        }

        stage('Approval to Stop Server') {
            steps {
                script {
                    input message: 'âœ… Server is running. Approve to stop it.'
                }
            }
        }

        stage('Stop FastAPI Server') {
            steps {
                bat """
                    for /f %%i in (${SERVER_PID_FILE}) do taskkill /PID %%i /F
                    del ${SERVER_PID_FILE}
                """
            }
        }
    }
}
