pipeline {
    agent any

    environment {
        VENV_DIR = "venv"
    }

    stages {
        stage('Clone Repo') {
            steps {
                git url: 'https://github.com/jenkinsDeployer/fastapi-jenkins-try1.git'
            }
        }

        stage('Set Up Python Env') {
            steps {
                bat "python -m venv %VENV_DIR%"
                bat ".\\%VENV_DIR%\\Scripts\\python.exe -m pip install --upgrade pip"
                bat ".\\%VENV_DIR%\\Scripts\\activate && pip install -r requirements.txt"
                bat ".\\%VENV_DIR%\\Scripts\\activate && pip install pytest"
            }
        }

        stage('Run Unit Tests') {
            steps {
                bat ".\\%VENV_DIR%\\Scripts\\activate && pytest tests/"
            }
        }
    }
}
